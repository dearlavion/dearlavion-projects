server {
    listen 80;
    server_name {{ server_name | default('_') }};

    # ======================
    # Frontend (Angular)
    # ======================
    location / {
        proxy_pass http://dearlavion-web-ui:80;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # ======================
    # Auth Service
    # ======================
    location /auth/ {
        proxy_pass http://dearlavion-authentication-service:8081;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # ======================
    # Core Service
    # ======================
    location /core/ {
        proxy_pass http://dearlavion-core-service:8082;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

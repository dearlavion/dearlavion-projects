# ======================
# HTTPS server
# ======================
server {
    listen 443 ssl;
    server_name {{ server_names | join(' ') }};

    ssl_certificate /etc/letsencrypt/live/{{ server_names[0] }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ server_names[0] }}/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    # ACME HTTP-01 challenge for Certbot
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    resolver 127.0.0.11 valid=10s ipv6=off;
    resolver_timeout 5s;

    # ======================
    # Frontend
    # ======================
    location / {
        set $web_ui dearlavion-web-ui;
        proxy_pass http://$web_ui:{{ web_ui_port }};
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # ======================
    # Auth Service
    # ======================
    location /auth/ {
        set $auth_service dearlavion-authentication-service;
        proxy_pass http://$auth_service:{{ auth_port }};
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # ======================
    # Core Service
    # ======================
    location /core/ {
        set $core_service dearlavion-core-service;
        proxy_pass http://$core_service:{{ core_port }};
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# ======================
# HTTP redirect to HTTPS
# ======================
server {
    listen 80;
    server_name {{ server_names | join(' ') }};

    # ACME challenge for Certbot (must be **before** redirect)
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    # Redirect everything else to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

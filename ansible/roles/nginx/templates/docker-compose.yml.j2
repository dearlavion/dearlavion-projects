services:
  nginx:
    image: nginx:1.25-alpine
    container_name: dearlavion-nginx
    ports:
      - "80:80"    # HTTP (for webroot validation)
      - "443:443"  # HTTPS
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/dearlavion-app.conf:/etc/nginx/conf.d/default.conf:ro
      # Mount Let's Encrypt certificates from host
      - /etc/letsencrypt/live:/etc/letsencrypt/live:ro
      - /etc/letsencrypt/archive:/etc/letsencrypt/archive:ro
      - /etc/letsencrypt/renewal:/etc/letsencrypt/renewal:ro
      # Mount webroot for ACME challenge
      - /opt/dearlavion/certbot-webroot:/var/www/certbot:ro
    networks:
      - dearlavion-net

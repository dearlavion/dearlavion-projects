server {
    listen 8080;
    server_name my.dearlavion.site.ngrok.pizza;
    # server_name _;

    root {{ nginx_web_root }};
    index index.html;

    # Correct MIME types
    types {
        text/html                html;
        text/css                 css;
        application/javascript   js mjs;
        application/json         json;
        image/png                png;
        image/jpeg               jpg jpeg;
        image/svg+xml            svg;
        font/woff2               woff2;
        font/woff                woff;
        font/ttf                 ttf;
    }

    location ~* \.(js|mjs)$ {
        add_header Content-Type application/javascript;
    }

    # Serve Angular frontend
    location / {
        try_files $uri /index.html;
    }

    # Proxy webhook calls to n8n backend
    location /webhook/ {
        proxy_pass http://localhost:{{ n8n_port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Proxy API requests to n8n backend
    location /api/ {
        proxy_pass http://localhost:{{ n8n_port }}/;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        add_header Access-Control-Allow-Origin *;
        add_header Access-Control-Allow-Headers "Content-Type, Authorization";
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS";
    }

    # Backend service: CORE SERVICE
    location /core/ {
        proxy_pass http://localhost:{{ core_port }};
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        add_header Access-Control-Allow-Origin *;
        add_header Access-Control-Allow-Headers "Content-Type, Authorization";
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS";
    }

    # Backend service: AUTHENTICATION SERVICE
    location /auth/ {
        proxy_pass http://localhost:{{ auth_port }};
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        add_header Access-Control-Allow-Origin *;
        add_header Access-Control-Allow-Headers "Content-Type, Authorization";
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS";
    }
}
